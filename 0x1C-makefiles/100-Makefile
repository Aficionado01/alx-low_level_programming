CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(SRC) m.h
	$(value CC) $(value CFLAGS) -c $(SRC)
	$(value CC) $(OBJ) -o $(NAME)

clean: m.h
	$(RM) *~ $(NAME)

oclean: m.h
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
